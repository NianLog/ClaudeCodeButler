{
  "name": "ccb",
  "version": "1.3.0",
  "description": "Claude Code Butler - 配置管理工具",
  "main": "out/main/index.js",
  "scripts": {
    "dev": "cross-env LANG=zh_CN.UTF-8 LC_ALL=zh_CN.UTF-8 electron-vite dev",
    "dev:admin": "cross-env LANG=zh_CN.UTF-8 LC_ALL=zh_CN.UTF-8 electron-vite dev --admin",
    "build": "electron-vite build",
    "preview": "electron-vite preview",
    "pack": "electron-builder",
    "dist": "electron-builder --publish=never",
    "test": "vitest",
    "lint": "eslint src --ext .ts,.tsx",
    "type-check": "tsc --noEmit",
    "start": "npm run build && electron out/main/index.js",
    "start:admin": "npm run build && node scripts/start-admin.js",
    "start:admin-windows": "powershell.exe -Command \"Start-Process -FilePath 'electron' -ArgumentList 'out/main/index.js' -Verb RunAs\"",
    "start:admin-macos": "osascript -e 'do shell script \"electron out/main/index.js\" with administrator privileges\"",
    "start:admin-linux": "pkexec electron out/main/index.js",
    "start:admin-force": "node scripts/start-admin.js",
    "pack:mac": "electron-builder --mac",
    "pack:linux": "electron-builder --linux",
    "pack:all": "electron-builder --win --mac --linux",
    "dist:mac": "electron-builder --mac --publish=never",
    "dist:linux": "electron-builder --linux --publish=never",
    "dist:all": "electron-builder --win --mac --linux --publish=never",
    "postinstall": "patch-package"
  },
  "keywords": [
    "claude-code",
    "configuration-manager",
    "electron",
    "typescript",
    "react"
  ],
  "author": "NianSir",
  "license": "MIT",
  "homepage": "https://github.com/NianLog/ClaudeCodeButler#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/NianLog/ClaudeCodeButler.git"
  },
  "bugs": {
    "url": "https://github.com/NianLog/ClaudeCodeButler/issues"
  },
  "dependencies": {
    "@monaco-editor/react": "^4.7.0",
    "antd": "^5.12.0",
    "axios": "^1.12.2",
    "chokidar": "^3.5.3",
    "cors": "^2.8.5",
    "dayjs": "^1.11.10",
    "express": "^5.1.0",
    "js-yaml": "^4.1.1",
    "monaco-editor": "^0.55.1",
    "node-cron": "^3.0.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-markdown": "^9.1.0",
    "react-syntax-highlighter": "^16.1.0",
    "react-window": "^1.8.10",
    "recharts": "^2.8.0",
    "remark-gfm": "^4.0.1",
    "uuid": "^9.0.0",
    "zustand": "^4.4.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.10.0",
    "@types/node-cron": "^3.0.11",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/react-syntax-highlighter": "^15.5.13",
    "@types/react-window": "^1.8.8",
    "@types/uuid": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^7.7.0",
    "@typescript-eslint/parser": "^7.7.0",
    "@vitejs/plugin-react": "^4.2.0",
    "autoprefixer": "^10.4.0",
    "baseline-browser-mapping": "^2.9.17",
    "cross-env": "^7.0.3",
    "electron": "^40.0.0",
    "electron-builder": "^26.5.0",
    "electron-vite": "^5.0.0",
    "eslint": "^8.57.0",
    "eslint-plugin-import": "^2.29.1",
    "patch-package": "^8.0.0",
    "postcss": "^8.4.0",
    "tailwindcss": "^3.3.0",
    "typescript": "^5.3.0",
    "vite": "^7.3.1",
    "vite-plugin-monaco-editor": "^1.1.0",
    "vitest": "^4.0.17"
  },
  "overrides": {
    "@electron/rebuild": "^4.0.2"
  },
  "build": {
    "appId": "com.claudecode.butler",
    "productName": "CCB",
    "compression": "normal",
    "directories": {
      "output": "release",
      "buildResources": "resources"
    },
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "resources/icons/icon.png"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "resources/icons/icon.png",
      "category": "public.app-category.productivity"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "tar.gz",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "resources/icons/icon.png",
      "category": "Utility"
    },
    "portable": {
      "artifactName": "CCB-Portable-${version}.exe"
    },
    "files": [
      "out/**/*",
      "resources/**/*",
      "!resources/icons/README.md"
    ],
    "extraResources": [
      {
        "from": "resources",
        "to": "resources"
      }
    ]
  }
}
